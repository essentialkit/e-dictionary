{
    "name": "Chrome Extension Starter",
    "description": "Chrome extension starter kit (boilerplate) with Typescript, Gulp and E2E tests",
    "homepage_url": "https://github.com/justiceo/xtension",
    "version": "22.04.03",
    "manifest_version": 3,
    "permissions": [
        "contextMenus",
        "storage"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "action": {
        "default_icon": {
            "16": "assets/logo-16x16.png",
            "24": "assets/logo-24x24.png",
            "32": "assets/logo-32x32.png"
        },
        "default_title": "Chrome Extension Starter",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "all_frames": true,
            "js": [
                "content-script/content-script.js"
            ],
            "css": [
                "content-script/content-script.css"
            ]
        }
    ],
    "icons": {
        "16": "assets/logo-16x16.png",
        "32": "assets/logo-32x32.png",
        "48": "assets/logo-48x48.png",
        "128": "assets/logo-128x128.png"
    },
    "options_page": "options-page/options.html",
    "background": {
        "service_worker": "background-script/background.js"
    }
}